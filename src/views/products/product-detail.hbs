  <form action="/products/add-review" method="POST">
    <div
      x-data="{ rating: '', comment: ''}"
      x-init="$watch('rating', (value) => rating = (value < 1 || value > 5) ? '' : value)"
      class="mx-auto max-w-screen-md px-4 py-8 sm:px-6 lg:px-8"
    >
      <label for="comment" class="sr-only">Order notes</label>

      <div
        class="overflow-hidden rounded-lg border border-gray-200 shadow-sm focus-within:border-blue-600 focus-within:ring-1 focus-within:ring-blue-600 dark:border-gray-700"
      >
        <textarea
          x-model="comment"
          id="comment"
          name="comment"
          class="w-full resize-none border-none align-top focus:ring-0 dark:bg-gray-800 dark:text-white sm:text-sm"
          rows="4"
          placeholder="Enter your review..."
        ></textarea>

        <div
          class="flex items-center justify-between gap-2 bg-white p-3 dark:bg-gray-800"
        >
          <label for="rating" class="flex items-center gap-2">

            <input
              x-model.number="rating"
              type="number"
              id="rating"
              name="rating"
              class="w-9 rounded-md border-gray-200 shadow-sm [-moz-appearance:_textfield] sm:text-sm [&::-webkit-inner-spin-button]:m-0 [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:m-0 [&::-webkit-outer-spin-button]:appearance-none"
            />

            <span class="text-sm text-gray-600">/ 5</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 text-yellow-400"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
          </label>

          <input name="productId" class="hidden" value="{{productId}}" />

          <button
            :disabled="!rating || !comment"
            :class="(!rating || !comment) ? 'bg-indigo-500 hover:bg-indigo-500' : 'bg-indigo-600 hover:bg-indigo-700'"
            type="submit"
            class="rounded px-3 py-1.5 text-sm font-medium text-white"
          >
            Submit
          </button>
        </div>
      </div>
    </div>
  </form>

