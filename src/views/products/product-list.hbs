<section>
  <div class="mx-auto max-w-screen-2xl px-4 py-6 sm:px-6 sm:py-8 lg:px-8">
    <header class="lg:hidden">
      <h2 class="text-xl font-bold text-gray-900 sm:text-3xl">Laptops</h2>
    </header>

    <!-- Mobile Filters & Sorting -->
    <div class="mt-8 block lg:hidden">
      <button
        class="flex cursor-pointer items-center gap-2 border-b border-gray-400 pb-1 text-gray-900 transition hover:border-gray-600"
      >
        <span class="text-sm font-medium"> Filters & Sorting </span>

        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-4 w-4 rtl:rotate-180"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M8.25 4.5l7.5 7.5-7.5 7.5"
          />
        </svg>
      </button>
    </div>
    <!-- Mobile Filters & Sorting -->

    <div class="lg:grid lg:grid-cols-4 lg:items-start lg:gap-8">
      <div>
        <header>
          <h2
            class="mb-4 text-xl font-bold text-gray-900 sm:text-3xl lg:mb-8"
          >Laptops</h2>
        </header>

        <!-- Desktop Filters & Sorting -->
        <form
          id="myForm"
          action="/products/laptops/"
          method="get"
          class="hidden space-y-4 lg:block"
          x-data="{ 
          name: '{{query.name}}', 
          sort : '{{query.sort}}', 
          minPrice: '{{query.minPrice}}', maxPrice: '{{query.maxPrice}}', priceMsg: '',
          subcategories: {{toStringList query.subcategories}},
          brands: {{toStringList query.brands}},

          reset() {
            this.name = '';
            this.minPrice = '';
            this.maxPrice = '';
            this.priceMsg = '';
            this.categories = [];
            this.brands = [];
          }
        }"
        >
          <!-- Sort By -->
          <div>
            <label for="sort" class="block text-xs font-medium text-gray-700">
              Sort By
            </label>

            <select
              x-model="sort"
              id="sort"
              name="sort"
              class="mt-1 rounded border-gray-300 py-2.5 text-sm"
            >
              <option value="name-asc">
                Name (asc)
              </option>

              <option value="name-desc">
                Name (desc)
              </option>

              <option value="price-asc">
                Price (asc)
              </option>

              <option value="price-desc">
                Price (desc)
              </option>
            </select>
          </div>
          <!-- Sort By -->

          <!-- Search -->
          <div>
            <div class="relative">
              <label
                for="Search"
                class="block text-xs font-medium text-gray-700"
              >
                Search
              </label>

              <input
                x-model="name"
                type="text"
                id="Search"
                :name="!name ? '' : 'name'"
                placeholder="Product's name"
                class="mt-1 w-full rounded-md border-gray-200 py-2.5 pe-10 shadow-sm sm:text-sm"
              />
            </div>
          </div>
          <!-- Search -->

          <!-- Filters -->
          <div>
            <p class="block text-xs font-medium text-gray-700">Filters</p>

            <div class="mt-1 space-y-2">
              <!-- Range -->
              <div
                open
                x-init="$watch('minPrice', (value) => minPrice = value < 0 ? '' : value ); 
                      $watch('maxPrice', (value) => maxPrice = value < 0 ? '' : value );"
                class="overflow-hidden rounded border border-gray-300 [&_summary::-webkit-details-marker]:hidden"
              >
                <div
                  class="flex cursor-pointer items-center justify-between gap-2 p-2.5 text-gray-900 transition"
                >
                  <span class="text-sm font-medium"> Price </span>

                </div>

                <div class="border-t border-gray-200 bg-white">
                  <div
                    :class="priceMsg ? '' : 'hidden'"
                    class="border-b p-2 text-sm text-red-500"
                    x-text="priceMsg"
                  >
                  </div>

                  <div class="border- border-gray-200 p-4">
                    <div class="flex items-center justify-between gap-4">
                      <label for="minPrice" class="flex items-center gap-2">
                        <input
                          @change="priceMsg = minPrice && maxPrice && minPrice > maxPrice ? 'Please input a valid price range' : ''"
                          x-model.number="minPrice"
                          type="number"
                          id="minPrice"
                          :name="!priceMsg && minPrice ? 'minPrice' : ''"
                          placeholder="From"
                          class="w-full rounded-md border-gray-200 shadow-sm sm:text-sm"
                        />
                        <span class="text-sm text-gray-600">đ</span>
                      </label>

                      <div class="text-sm text-gray-600">—</div>

                      <label for="maxPrice" class="flex items-center gap-2">
                        <input
                          @change="priceMsg = minPrice && maxPrice && minPrice > maxPrice ? 'Please input a valid price range' : ''"
                          x-model.number="maxPrice"
                          type="number"
                          id="maxPrice"
                          :name="!priceMsg && maxPrice ? 'maxPrice' : ''"
                          placeholder="To"
                          class="w-full rounded-md border-gray-200 shadow-sm sm:text-sm"
                        />
                        <span class="text-sm text-gray-600">đ</span>
                      </label>

                    </div>
                  </div>
                </div>
              </div>
              <!-- Range -->

              <!-- Checkboxes -->
              <details
                class="overflow-hidden rounded border border-gray-300 [&_summary::-webkit-details-marker]:hidden"
              >
                <summary
                  class="flex cursor-pointer items-center justify-between gap-2 p-2.5 text-gray-900 transition"
                >
                  <div class="text-sm">
                    <span class="font-medium">Subcategory</span>
                    <span class="relative mx-2">
                      <p
                        :class="subcategories.length ? '' : 'hidden'"
                        class="absolute top-1/2 inline-block -translate-y-1/2 whitespace-pre rounded-full bg-teal-600 px-2 py-1 text-xs text-white"
                        x-text="`${subcategories.length} selected`"
                      ></p>
                    </span>
                  </div>

                  <span class="transition group-open:-rotate-180">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="h-4 w-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 8.25l-7.5 7.5-7.5-7.5"
                      />
                    </svg>
                  </span>
                </summary>

                <div class="border-t border-gray-200 bg-white">
                  <ul class="space-y-1 border-gray-200 p-4">
                    {{#each filter.subcategories}}
                      <li>
                        <label
                          for="{{this}}"
                          class="inline-flex items-center gap-2"
                        >
                          <input
                            type="checkbox"
                            x-model="subcategories"
                            id="{{this}}"
                            value="{{this}}"
                            class="h-5 w-5 rounded border-gray-300"
                          />

                          <span class="text-sm font-medium text-gray-700">
                            {{this}}
                          </span>
                        </label>
                      </li>
                    {{/each}}
                  </ul>

                  <input
                    class="hidden"
                    name="subcategory"
                    :value="subcategories"
                    :disabled="!subcategories.length"
                  />
                </div>
              </details>
              <!-- Checkboxes -->

              <!-- Checkboxes -->
              <details
                class="overflow-hidden rounded border border-gray-300 [&_summary::-webkit-details-marker]:hidden"
              >
                <summary
                  class="flex cursor-pointer items-center justify-between gap-2 p-2.5 text-gray-900 transition"
                >
                  <div class="text-sm">
                    <span class="font-medium">Brand</span>
                    <span class="relative mx-2">
                      <p
                        :class="brands.length ? '' : 'hidden'"
                        class="absolute top-1/2 inline-block -translate-y-1/2 whitespace-pre rounded-full bg-teal-600 px-2 py-1 text-xs text-white"
                        x-text="`${brands.length} selected`"
                      ></p>
                    </span>
                  </div>

                  <span class="transition group-open:-rotate-180">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="h-4 w-4"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M19.5 8.25l-7.5 7.5-7.5-7.5"
                      />
                    </svg>
                  </span>
                </summary>

                <div class="border-t border-gray-200 bg-white">
                  <ul class="space-y-1 border-gray-200 p-4">
                    {{#each filter.brands}}
                      <li>
                        <label
                          for="{{this}}"
                          class="inline-flex items-center gap-2"
                        >
                          <input
                            type="checkbox"
                            x-model="brands"
                            id="{{this}}"
                            value="{{this}}"
                            class="h-5 w-5 rounded border-gray-300"
                          />

                          <span class="text-sm font-medium text-gray-700">
                            {{this}}
                          </span>
                        </label>
                      </li>
                    {{/each}}
                  </ul>

                  <input
                    class="hidden"
                    name="brand"
                    :value="brands"
                    :disabled="!brands.length"
                  />
                </div>
              </details>
              <!-- Checkboxes -->
            </div>
          </div>
          <!-- Filters -->

          <div class="space-x-4 space-y-5">
            <button
              type="submit"
              class="rounded border border-teal-700 bg-teal-700 px-12 py-2.5 text-center text-sm font-medium text-white hover:bg-transparent hover:text-teal-700 focus:outline-none focus:ring active:text-teal-500"
            >
              Apply
            </button>

            <button
              @click="reset()"
              type="button"
              class="text-sm text-gray-900 underline underline-offset-4"
            >
              Reset
            </button>
          </div>
        </form>
        <!-- Desktop Filters & Sorting -->
      </div>

      <!-- Products -->
      {{#if products}}
        <div class="lg:col-span-3">
          <ul
            class="grid gap-6 sm:grid-cols-2 sm:grid-rows-3 lg:grid-cols-3 lg:grid-rows-2"
          >
            {{#each products}}
              <li>
                <a
                  href="/products/{{{../category}}}/{{id}}"
                  class="group block overflow-hidden"
                >
                  <img
                    src="{{image}}"
                    alt=""
                    onerror="this.onerror=null; this.src='/images/placeholder/product.webp';"
                    class="aspect-square object-cover transition duration-500 group-hover:scale-105 xsm:max-h-72"
                  />

                  <div class="relative bg-white pt-3">
                    <h3
                      class="text-xs text-gray-700 group-hover:underline group-hover:underline-offset-4"
                    >
                      {{name}}
                    </h3>

                    <p class="mt-2">
                      <span class="sr-only"> Regular Price </span>

                      <span class="tracking-wider text-gray-900">
                        {{price}}</span>
                    </p>
                  </div>
                </a>
              </li>
            {{/each}}

          </ul>

          <!-- Pagination -->
          <nav
            class="mt-8 inline-flex w-full items-center justify-center gap-3"
          >
            {{#if page.prev}}
              <a
                class="inline-flex h-8 w-8 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 rtl:rotate-180 dark:border-gray-800 dark:bg-gray-900 dark:text-white"
                href="/products/{{category}}/?page={{page.prev}}{{rawQuery}}"
              >
                <span class="sr-only">Previous Page</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-3 w-3"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            {{else}}
              <a
                @click.prevent
                class="inline-flex h-8 w-8 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 hover:cursor-pointer rtl:rotate-180 dark:border-gray-800 dark:bg-gray-900 dark:text-white"
              >
                <span class="sr-only">Previous Page</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-3 w-3"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            {{/if}}

            <p class="text-xs text-gray-900 dark:text-white">
              {{page.current}}
              <span class="mx-0.25">/</span>
              {{page.total}}
            </p>

            {{#if page.next}}
              <a
                class="inline-flex h-8 w-8 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 rtl:rotate-180 dark:border-gray-800 dark:bg-gray-900 dark:text-white"
                href="/products/{{category}}/?page={{page.next}}{{rawQuery}}"
              >
                <span class="sr-only">Next Page</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-3 w-3"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            {{else}}
              <a
                @click.prevent
                class="inline-flex h-8 w-8 items-center justify-center rounded border border-gray-100 bg-white text-gray-900 hover:cursor-pointer rtl:rotate-180 dark:border-gray-800 dark:bg-gray-900 dark:text-white"
              >
                <span class="sr-only">Next Page</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-3 w-3"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                >
                  <path
                    fill-rule="evenodd"
                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                    clip-rule="evenodd"
                  />
                </svg>
              </a>
            {{/if}}
          </nav>
          <!-- Pagination -->
        </div>
      {{else}}
        <div
          class="grid h-full place-content-center dark:bg-slate-900 lg:col-span-3"
        >
          <div
            class="flex flex-auto flex-col items-center justify-center p-4 md:p-5"
          >
            <svg
              class="h-10 w-10 text-gray-500"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="22" x2="2" y1="12" y2="12" />
              <path
                d="M5.45 5.11 2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z"
              />
              <line x1="6" x2="6.01" y1="16" y2="16" />
              <line x1="10" x2="10.01" y1="16" y2="16" />
            </svg>
            <p class="mt-5 text-sm text-gray-800 dark:text-gray-300">
              No products to show
            </p>
          </div>
        </div>
      {{/if}}
      <!-- Products -->
    </div>
  </div>
</section>