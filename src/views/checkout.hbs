<div class="mx-auto min-h-[calc(100vh-4rem)] max-w-screen-xl px-4 py-8">
  <div class="px-5">
    <div class="mb-2">
      <h1 class="text-center text-2xl font-bold text-gray-700">Checkout</h1>
    </div>
  </div>

  <form
    id="myForm"
    x-data="{ addressSelection: 'default'}"
    @submit.prevent="await $store.order.submit();"
    class="w-full border-gray-200 bg-white px-5 py-10 text-gray-800"
  >
    <div class="w-full">
      <div class="-mx-3 items-start md:flex">

        <!-- Left col -->
        <div class="mb-10 space-y-8 px-3 md:w-5/12">
          <div>
            <h3 class="mb-2 text-lg font-semibold">Payment method</h3>
            <div class="space-y-3">
              <!-- Cash -->
              <div
                class="rounded-lg border border-neutral-200/70 bg-white p-4 shadow-sm"
              >
                <label for="cash" class="flex items-center space-x-3">
                  <input
                    checked
                    id="cash"
                    type="radio"
                    name="paymentMethod"
                    value="cash"
                    class="-translate-y-px text-gray-900 focus:ring-gray-700"
                  />
                  <p class="font-medium">Cash</p>
                </label>
              </div>
              <!-- End cash -->
            </div>
          </div>

          <div>
            <h3 class="mb-2 text-lg font-semibold">Shipping address</h3>
            <div class="space-y-3">
              <!-- Account default -->
              <div
                class="rounded-lg border border-neutral-200/70 bg-white p-4 shadow-sm"
              >
                <label
                  @click="addressSelection = 'default'"
                  class="flex items-center space-x-3"
                >
                  <input
                    checked
                    type="radio"
                    name="addressSelection"
                    value="default"
                    class="-translate-y-px text-gray-900 focus:ring-gray-700"
                  />
                  <p class="font-medium">Account default</p>
                </label>
                <div
                  :class="addressSelection === 'default' ? 'max-h-96' : 'max-h-0 ' "
                  class="overflow-hidden transition-[max-height] duration-300"
                >
                  <div class="mt-3 text-sm">
                    <dl class="">
                      <div class="grid grid-cols-3 gap-4 px-0 py-1">
                        <dt class="font-medium leading-6 text-gray-800">
                          Full name</dt>
                        <dd class="col-span-2 leading-6 text-gray-700">
                          {{defaultAddress.fullName}}</dd>
                      </div>
                      <div class="grid grid-cols-3 gap-4 px-0 py-1">
                        <dt class="font-medium leading-6 text-gray-800">
                          Phone number</dt>
                        <dd class="col-span-2 leading-6 text-gray-700">
                          {{defaultAddress.phoneNumber}}</dd>
                      </div>
                      <div class="grid grid-cols-3 gap-4 px-0 py-1">
                        <dt class="font-medium leading-6 text-gray-800">
                          Address</dt>
                        <dd class="col-span-2 leading-6 text-gray-700">
                          {{defaultAddress.address}}</dd>
                      </div>
                    </dl>
                  </div>
                </div>
              </div>
              <!-- End account default -->
              <!-- New address -->
              <div
                class="rounded-lg border border-neutral-200/70 bg-white p-4 shadow-sm"
              >
                <label
                  @click="addressSelection = 'new'"
                  class="flex items-center space-x-3"
                >
                  <input
                    type="radio"
                    name="addressSelection"
                    value="new"
                    class="-translate-y-px text-gray-900 focus:ring-gray-700"
                  />
                  <p class="font-medium">New address</p>
                </label>
                <div
                  :class="addressSelection === 'new' ? 'max-h-96 mt-3' : 'max-h-0' "
                  class="grid grid-cols-1 gap-x-6 gap-y-6 overflow-hidden transition-[max-height] duration-300 sm:max-w-xl sm:grid-cols-6"
                >
                  <div class="col-span-4">
                    <label
                      for="fullName"
                      class="block text-sm font-medium leading-6 text-gray-900"
                    >Full name
                    </label>
                    <div class="mt-2">
                      <input
                        :disabled="addressSelection !== 'new'"
                        :required="addressSelection === 'new'"
                        id="fullName"
                        type="text"
                        name="fullName"
                        autocomplete="name"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-black/10 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>
                  <div class="col-span-2">
                    <label
                      for="phoneNumber"
                      class="block text-sm font-medium leading-6 text-gray-900"
                    >Phone number
                    </label>
                    <div class="mt-2">
                      <input
                        :disabled="addressSelection !== 'new'"
                        :required="addressSelection === 'new'"
                        id="phoneNumber"
                        type="tel"
                        name="phoneNumber"
                        autocomplete="tel-national"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-black/10 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>
                  <div class="col-span-full">
                    <label
                      for="addressLine1"
                      class="block text-sm font-medium leading-6 text-gray-900"
                    >Address Line 1
                    </label>
                    <div class="mt-2">
                      <input
                        :disabled="addressSelection !== 'new'"
                        :required="addressSelection === 'new'"
                        id="addressLine1"
                        type="text"
                        name="addressLine1"
                        autocomplete="shipping address-line1"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-black/10 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>
                  <div class="col-span-full">
                    <label
                      for="addressLine2"
                      class="block text-sm font-medium leading-6 text-gray-900"
                    >Address Line 2
                    </label>
                    <div class="mt-2">
                      <input
                        :disabled="addressSelection !== 'new'"
                        id="addressLine2"
                        type="text"
                        name="addressLine2"
                        autocomplete="shipping address-line2"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-black/10 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>
                  <div class="col-span-3">
                    <label
                      for="district"
                      class="block text-sm font-medium leading-6 text-gray-900"
                    >District
                    </label>
                    <div class="mt-2">
                      <input
                        :disabled="addressSelection !== 'new'"
                        :required="addressSelection === 'new'"
                        id="district"
                        type="text"
                        name="district"
                        autocomplete="address-level2"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-black/10 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>
                  <div class="col-span-3">
                    <label
                      for="cityOrProvince"
                      class="block text-sm font-medium leading-6 text-gray-900"
                    >City/Province
                    </label>
                    <div class="mt-2">
                      <input
                        :disabled="addressSelection !== 'new'"
                        :required="addressSelection === 'new'"
                        id="cityOrProvince"
                        type="text"
                        name="cityOrProvince"
                        autocomplete="address-level1"
                        class="block w-full rounded-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-black/10 focus:ring-2 focus:ring-inset focus:ring-teal-600 sm:text-sm sm:leading-6"
                      />
                    </div>
                  </div>
                </div>
              </div>
              <!-- End new address -->
            </div>
          </div>
        </div>
        <!-- End left col -->

        <!-- Right col -->
        <div class="px-3 md:w-7/12 lg:pr-10">
          <h3 class="mb-2 text-lg font-semibold">Items</h3>

          <div
            class="mx-auto mb-6 w-full space-y-4 border-b border-gray-200 pb-6 text-gray-800"
          >
            <template x-for="item in $store.order.items" :key="item.productId">
              <div class="flex w-full items-center">
                <div
                  class="aspect-[3/2] h-16 overflow-hidden border-gray-200 bg-gray-50 object-cover"
                >
                  <img
                    :src="item.image"
                    alt="product-image"
                    onerror="this.onerror=null; this.src='/images/placeholder/product.webp';"
                  />
                </div>
                <div class="flex-grow pb-[1px] pl-3">
                  <h6
                    class="font-semibold text-gray-800"
                    x-text="item.name"
                  ></h6>
                  <p
                    class="text-sm text-gray-700"
                    x-text="currencyFormatter.format(item.price)"
                  ></p>
                  <div class="text-sm text-gray-700">
                    <span>&#215; </span>
                    <span x-text="item.quantity"></span>
                  </div>
                </div>
                <p
                  class="font-semibold text-gray-700"
                  x-text="currencyFormatter.format(item.totalPrice)"
                ></p>
              </div>
            </template>
          </div>

          <div class="mb-6 border-b border-gray-200 pb-6 text-gray-700">
            <div class="mb-3 flex w-full items-center">
              <div class="flex-grow">
                <span class="font-medium text-gray-800">Subtotal</span>
              </div>
              <div class="pl-3">
                <span
                  class="font-semibold"
                  x-text="currencyFormatter.format({{subtotal}})"
                ></span>
              </div>
            </div>
            <div class="flex w-full items-center">
              <div class="flex-grow">
                <span class="font-medium text-gray-800">Shipping</span>
              </div>
              <div class="pl-3">
                <span class="font-semibold">Free</span>
              </div>
            </div>
          </div>
          <div class="mb-6 border-b border-gray-200 text-xl md:border-none">
            <div class="flex w-full items-center">
              <div class="flex-grow">
                <span class="font-bold">Total</span>
              </div>
              <div
                class="pl-3 text-lg font-bold"
                x-text="currencyFormatter.format({{subtotal}})"
              ></div>
            </div>
          </div>

          <div class="flex justify-end">
            <button
              type="submit"
              class="rounded-md bg-teal-600 p-4 py-1.5 font-medium text-blue-50 hover:bg-teal-700 disabled:pointer-events-none"
            >Confirm</button>
          </div>
        </div>
        <!-- End right col -->
      </div>
    </div>
  </form>
</div>

